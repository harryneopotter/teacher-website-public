# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Cloud Storage Buckets
BUCKET_PDFS=your-pdfs-bucket-name
BUCKET_THUMBNAILS=your-thumbnails-bucket-name

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890
ADMIN_USER_ID=123456789
CONTENT_MANAGER_USER_ID=987654321

# Firebase Service Account
# This should be a JSON object with your Firebase service account credentials
# Get this from: Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}'

# Optional: Additional Image Domains
# Comma-separated list of domains allowed for next/image
ADDITIONAL_IMAGE_DOMAINS=example.com,another-domain.com

# Environment
NODE_ENV=development

# Local Development Port (optional, defaults to 3000)
PORT=3000
